               <!-- Main content -->
       <div class="container-fluid">
            <h2 style="color:#fff;">Transaction History</h2>
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <h3 style="color:#fff;">Deposits</h3>
            <!-- Debug: Display raw deposits data -->
            <% if (!user.deposits || user.deposits.length === 0) { %>
                <p style="color:#B3B3B3;">No deposits found.</p>
            <% } else { %>
                <table class="table" style="background-color:#222; color:#B3B3B3;">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Narration</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody class="text-white">
                        <% user.deposits.forEach(deposit => { %>
                            <% if (deposit && deposit._id) { %>
                                <tr>
                                    <td><%= deposit.type || 'N/A' %></td>
                                    <td><%= deposit.amount || 'N/A' %></td>
                                    <td><%= deposit.status || 'N/A' %></td>
                                    <td><%= deposit.narration || 'N/A' %></td>
                                    <td><%= deposit.createdAt ? new Date(deposit.createdAt).toLocaleDateString() : 'N/A' %></td>
                                </tr>
                            <% } %>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
            <h3 style="color:#fff;">Withdrawals</h3>
            <!-- Debug: Display raw withdrawals data -->
            <% if (!user.withdraws || user.withdraws.length === 0) { %>
                <p style="color:#B3B3B3;">No withdrawals found.</p>
            <% } else { %>
                <table class="table" style="background-color:#222; color:#B3B3B3;">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Narration</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody class="text-white">
                        <% user.withdraws.forEach(withdrawal => { %>
                            <% if (withdrawal && withdrawal._id) { %>
                                <tr>
                                    <td><%= withdrawal.type || 'N/A' %></td>
                                    <td><%= withdrawal.amount || 'N/A' %></td>
                                    <td><%= withdrawal.status || 'N/A' %></td>
                                    <td><%= withdrawal.narration || 'N/A' %></td>
                                    <td><%= withdrawal.createdAt ? new Date(withdrawal.createdAt).toLocaleDateString() : 'N/A' %></td>
                                </tr>
                            <% } %>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
  
