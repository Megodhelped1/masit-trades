 <div class="container-fluid">
            <h2 class="text-white">Edit Trade</h2>
            <% if (messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <div class="iq-card">
                <div class="iq-card-body">
                    <form id="editTradeForm" action="/trades-edit/<%= livetrade._id %>" method="POST">
                        <div class="form-group">
                            <label>Trading Type</label>
                            <select name="trading_type" class="form-control" required>
                                <option value="CRYPTOCURRENCY" <%= livetrade.type === 'CRYPTOCURRENCY' ? 'selected' : '' %>>CRYPTOCURRENCY</option>
                                <option value="FOREX" <%= livetrade.type === 'FOREX' ? 'selected' : '' %>>FOREX</option>
                                <option value="Margin Trade" <%= livetrade.type === 'Margin Trade' ? 'selected' : '' %>>Margin Trade</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Currency Pair</label>
                            <input type="text" name="currency_pair" class="form-control" value="<%= livetrade.currencypair %>" required>
                        </div>
                        <div class="form-group">
                            <label>Lot Size</label>
                            <input type="number" name="lot_size" class="form-control" value="<%= livetrade.lotsize %>" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <label>Entry Price</label>
                            <input type="number" name="entry_price" class="form-control" value="<%= livetrade.entryPrice %>" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <label>Stop Loss</label>
                            <input type="number" name="stop_loss" class="form-control" value="<%= livetrade.stopLoss %>" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <label>Take Profit</label>
                            <input type="number" name="take_profit" class="form-control" value="<%= livetrade.takeProfit %>" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <label>Action</label>
                            <select name="trading_action" class="form-control" required>
                                <option value="BUY" <%= livetrade.action === 'BUY' ? 'selected' : '' %>>BUY</option>
                                <option value="SELL" <%= livetrade.action === 'SELL' ? 'selected' : '' %>>SELL</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <select name="status" class="form-control" required>
                                <option value="Open" <%= livetrade.status === 'Open' ? 'selected' : '' %>>Open</option>
                                <option value="Closed" <%= livetrade.status === 'Closed' ? 'selected' : '' %>>Closed</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Update Trade</button>
                        <a href="/all-livetrade" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
 </div>


</section>

<script>
        document.getElementById('editTradeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            console.log('Trade form submission triggered'); // Debug log
            Swal.fire({
                title: 'Confirm Update',
                text: 'Are you sure you want to update this trade?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#286090',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, update it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    console.log('Trade form submission confirmed'); // Debug log
                    this.submit(); // Submit the form
                } else {
                    console.log('Trade form submission canceled'); // Debug log
                }
            }).catch((error) => {
                console.error('SweetAlert2 error:', error); // Debug log
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred during confirmation. Please try again.',
                    icon: 'error',
                    confirmButtonColor: '#286090'
                });
            });
        });
    </script>


