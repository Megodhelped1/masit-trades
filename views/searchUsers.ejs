   <div class="container py-4">
    <!-- Flash Messages for SweetAlert2 -->
    <% if (success && success.length > 0) { %>
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          Swal.fire({
            icon: 'success',
            title: 'Success',
            text: '<%= success %>',
            showConfirmButton: true,
            timer: 3000,
            timerProgressBar: true,
            background: '#212529',
            color: '#fff',
            confirmButtonColor: '#286090'
          });
        });
      </script>
    <% } %>
    <% if (error && error.length > 0) { %>
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '<%= error %>',
            showConfirmButton: true,
            timer: 3000,
            timerProgressBar: true,
            background: '#212529',
            color: '#fff',
            confirmButtonColor: '#286090'
          });
        });
      </script>
    <% } %>

    <!-- Search Form -->
    <div class="row mb-4">
      <div class="col-12">
        <form action="/searchUsers" method="POST" class="d-flex align-items-center gap-2">
          <div class="input-group">
            <span class="input-group-text bg-primary text-white border-0"><i class="bi bi-search"></i></span>
            <input type="text" id="search" name="search" class="form-control shadow-sm" placeholder="Search by first or last name" value="<%= search %>">
          </div>
          <button type="submit" class="btn btn-primary shadow-sm">
            <i class="bi bi-search"></i> Search
          </button>
        </form>
      </div>
    </div>

    <!-- User Table -->
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
              <tr>
                <th scope="col">
                  <a href="?page=<%= page %>&sort=index&order=<%= sort === 'index' && order === 'asc' ? 'desc' : 'asc' %>&search=<%= encodeURIComponent(search) %>" class="text-white text-decoration-none">
                    S/N
                    <% if (sort === 'index') { %>
                      <%= order === 'asc' ? '↑' : '↓' %>
                    <% } %>
                  </a>
                </th>
                <th scope="col">
                  <a href="?page=<%= page %>&sort=fullname&order=<%= sort === 'fullname' && order === 'asc' ? 'desc' : 'asc' %>&search=<%= encodeURIComponent(search) %>" class="text-white text-decoration-none">
                    Full Name
                    <% if (sort === 'fullname') { %>
                      <%= order === 'asc' ? '↑' : '↓' %>
                    <% } %>
                  </a>
                </th>
                <th scope="col">
                  <a href="?page=<%= page %>&sort=email&order=<%= sort === 'email' && order === 'asc' ? 'desc' : 'asc' %>&search=<%= encodeURIComponent(search) %>" class="text-white text-decoration-none">
                    Email
                    <% if (sort === 'email') { %>
                      <%= order === 'asc' ? '↑' : '↓' %>
                    <% } %>
                  </a>
                </th>
                <th scope="col">
                  <a href="?page=<%= page %>&sort=country&order=<%= sort === 'country' && order === 'asc' ? 'desc' : 'asc' %>&search=<%= encodeURIComponent(search) %>" class="text-white text-decoration-none">
                    Country
                    <% if (sort === 'country') { %>
                      <%= order === 'asc' ? '↑' : '↓' %>
                    <% } %>
                  </a>
                </th>
                <th scope="col">
                  <a href="?page=<%= page %>&sort=phone&order=<%= sort === 'phone' && order === 'asc' ? 'desc' : 'asc' %>&search=<%= encodeURIComponent(search) %>" class="text-white text-decoration-none">
                    Telephone
                    <% if (sort === 'phone') { %>
                      <%= order === 'asc' ? '↑' : '↓' %>
                    <% } %>
                  </a>
                </th>
                <th scope="col">
                  <a href="?page=<%= page %>&sort=isSuspended&order=<%= sort === 'isSuspended' && order === 'asc' ? 'desc' : 'asc' %>&search=<%= encodeURIComponent(search) %>" class="text-white text-decoration-none">
                    Status
                    <% if (sort === 'isSuspended') { %>
                      <%= order === 'asc' ? '↑' : '↓' %>
                    <% } %>
                  </a>
                </th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (users.length > 0) { %>
                <% users.forEach((element, index) => { %>
                  <tr>
                    <td><%= index + 1 + (page - 1) * 100 %></td>
                    <td><%= element.fullname %></td>
                    <td><%= element.email %></td>
                    <td><%= element.country %></td>
                    <td><%= element.tel %></td>
                    <td>
                      <span class="badge <%= element.isSuspended ? 'bg-danger' : 'bg-success' %>">
                        <%= element.isSuspended ? 'Suspended' : 'Active' %>
                      </span>
                    </td>
                    <td>
                      <div class="d-flex gap-2">
                        <a href="/viewUser/<%= element._id %>" class="btn btn-sm btn-primary" title="View">
                          <i class="bi bi-eye"></i>
                        </a>
                        <a href="/editUser/<%= element._id %>" class="btn btn-sm btn-warning" title="Edit">
                          <i class="bi bi-pencil"></i>
                        </a>
                        <form action="/suspendUser/<%= element._id %>?_method=PUT" method="POST" class="d-inline suspend-form">
                          <button type="submit" class="btn btn-sm <%= element.isSuspended ? 'btn-success' : 'btn-secondary' %>" title="<%= element.isSuspended ? 'Activate' : 'Suspend' %>">
                            <i class="bi <%= element.isSuspended ? 'bi-play-fill' : 'bi-pause-fill' %>"></i>
                          </button>
                        </form>
                        <form action="/deleteUser/<%= element._id %>?_method=DELETE" method="POST" class="d-inline delete-form">
                          <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center py-4">No users found matching "<%= search %>"</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Pagination Controls -->
    <% if (totalPages > 1) { %>
      <nav aria-label="Pagination" class="mt-4">
        <ul class="pagination justify-content-center">
          <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="<%= page === 1 ? '#' : `?page=${page - 1}&sort=${sort}&order=${order}&search=${encodeURIComponent(search)}` %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= page === i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>&sort=<%= sort %>&order=<%= order %>&search=<%= encodeURIComponent(search) %>"><%= i %></a>
            </li>
          <% } %>
          <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="<%= page === totalPages ? '#' : `?page=${page + 1}&sort=${sort}&order=${order}&search=${encodeURIComponent(search)}` %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    <% } %>
  </div>
  
