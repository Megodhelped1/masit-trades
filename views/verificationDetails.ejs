                <p><strong>Marital Status:</strong> <%= verification.marital %></p>
                <p><strong>Age:</strong> <%= verification.age %></p>
                <p><strong>Address:</strong> <%= verification.address %></p>
                  <% if (verification.image) { %>
                <p>
                    <strong>Front ID:</strong>
                    <img src="<%= verification.image %>" alt="Front ID" style="max-width: 300px;" onerror="this.onerror=null; this.parentElement.innerHTML='<span>Failed to load front image</span>';">
                </p>
            <% } else { %>
                <p><span>No front image uploaded</span></p>
            <% } %>
            <% if (verification.backImage) { %>
                <p>
                    <strong>Back ID:</strong>
                    <img src="<%= verification.backImage %>" alt="Back ID" style="max-width: 300px;" onerror="this.onerror=null; this.parentElement.innerHTML='<span>Failed to load back image</span>';">
                </p>
            <% } else { %>
                <p><span>No back image uploaded</span></p>
            <% } %>
                
                <a href="/allVerify" class="btn btn-secondary">Back to List</a>
                <button onclick="deleteVerification('<%= verification._id %>')" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
        // Ensure DOM is fully loaded before running scripts
        document.addEventListener('DOMContentLoaded', function() {
            function deleteVerification(id) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will delete the verification request!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#1b55e2',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: `/verify-delete/${id}`,
                            type: 'DELETE',
                            headers: {
                                'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content') // Include CSRF token if needed
                            },
                            success: function(response) {
                                console.log('Delete success:', response);
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Deleted',
                                    text: response.message || 'Verification deleted successfully',
                                    confirmButtonColor: '#1b55e2'
                                }).then(() => {
                                    window.location.reload(true);
                                });
                            },
                            error: function(xhr, status, error) {
                                console.error('Delete error:', {
                                    status: xhr.status,
                                    response: xhr.responseJSON,
                                    error: error
                                });
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: xhr.responseJSON?.error || 'Failed to delete verification',
                                    confirmButtonColor: '#1b55e2'
                                });
                            }
                        });
                    }
                });
            }

            // Expose deleteVerification to global scope for onclick
            window.deleteVerification = deleteVerification;
        });
    </script>
  
