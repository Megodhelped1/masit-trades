    <div class="container-fluid">
            <h2 class="text-white">Edit Withdrawal</h2>
            <% if (messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <div class="card">
                <div class="card-body">
                    <form id="editWithdrawalForm" action="/withdrawals-edit/<%= withdrawal._id %>" method="POST">
                        <div class="form-group">
                            <label>User</label>
                            <p class="form-control-static"><%= withdrawal.owner ? `${withdrawal.owner.fullname} (${withdrawal.owner.email})` : 'No Owner' %></p>
                        </div>
                        <div class="form-group">
                            <label>Amount (â‚¬)</label>
                            <input type="number" name="amount" class="form-control" value="<%= withdrawal.amount %>" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <label>Type</label>
                            <p class="form-control-static"><%= withdrawal.type %></p>
                        </div>
                        <% if (['Bitcoin', 'Ethereum', 'USDT'].includes(withdrawal.type)) { %>
                            <div class="form-group">
                                <label>Wallet Address</label>
                                <input type="text" name="walletAddress" class="form-control" value="<%= withdrawal.walletAddress || '' %>" required>
                            </div>
                        <% } %>
                        <% if (withdrawal.type === 'CashApp') { %>
                            <div class="form-group">
                                <label>CashApp Tag</label>
                                <input type="text" name="cashAppTag" class="form-control" value="<%= withdrawal.cashAppTag || '' %>" required>
                            </div>
                        <% } %>
                        <% if (withdrawal.type === 'PayPal') { %>
                            <div class="form-group">
                                <label>PayPal Email</label>
                                <input type="email" name="paypalEmail" class="form-control" value="<%= withdrawal.paypalEmail || '' %>" required>
                            </div>
                        <% } %>
                        <% if (withdrawal.type === 'Bank Transfer') { %>
                            <div class="form-group">
                                <label>Bank Name</label>
                                <input type="text" name="bankName" class="form-control" value="<%= withdrawal.bankDetails?.bankName || '' %>" required>
                            </div>
                            <div class="form-group">
                                <label>Account Number</label>
                                <input type="text" name="accountNumber" class="form-control" value="<%= withdrawal.bankDetails?.accountNumber || '' %>" required>
                            </div>
                            <div class="form-group">
                                <label>Country</label>
                                <input type="text" name="country" class="form-control" value="<%= withdrawal.bankDetails?.country || '' %>" required>
                            </div>
                            <div class="form-group">
                                <label>Swift Code</label>
                                <input type="text" name="swiftCode" class="form-control" value="<%= withdrawal.bankDetails?.swiftCode || '' %>" required>
                            </div>
                        <% } %>
                        <div class="form-group">
                            <label>Status</label>
                            <select name="status" class="form-control" required>
                                <option value="pending" <%= withdrawal.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="approved" <%= withdrawal.status === 'approved' ? 'selected' : '' %>>Approved</option>
                                <option value="rejected" <%= withdrawal.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Narration</label>
                            <textarea name="narration" class="form-control"><%= withdrawal.narration || '' %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a href="/allWithdrawals" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>

  
</section>


<script>
        // SweetAlert2 for form submission confirmation
        document.getElementById('editWithdrawalForm').addEventListener('submit', function(e) {
            e.preventDefault();
            console.log('Form submission triggered'); // Debug log
            Swal.fire({
                title: 'Confirm Update',
                text: 'Are you sure you want to update this withdrawal?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#286090',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, update it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    console.log('Form submission confirmed'); // Debug log
                    this.submit(); // Submit the form
                } else {
                    console.log('Form submission canceled'); // Debug log
                }
            }).catch((error) => {
                console.error('SweetAlert2 error:', error); // Debug log
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred during confirmation. Please try again.',
                    icon: 'error',
                    confirmButtonColor: '#286090'
                });
            });
        });
    </script>

