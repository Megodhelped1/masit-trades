 <style>
  .chat-container {
    max-width: 800px;
    margin: 20px auto;
    background: #1c2526;
    border-radius: 10px;
    padding: 20px;
    color: #fff;
  }
  .chat-box {
    height: 400px;
    overflow-y: auto;
    border: 1px solid #444;
    border-radius: 5px;
    padding: 10px;
    margin-bottom: 20px;
    background: #171717;
  }
  .message {
    margin: 10px 0;
    padding: 10px;
    border-radius: 5px;
  }
  .message.user {
    background: #2a9d8f;
    margin-left: 20%;
    text-align: right;
  }
  .message.admin {
    background: #264653;
    margin-right: 20%;
  }
  .message img {
    max-width: 200px;
    border-radius: 5px;
  }
  .chat-form {
    display: flex;
    gap: 10px;
  }
  .chat-form input[type="text"] {
    flex: 1;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #444;
    background: #171717;
    color: #fff;
  }
  .chat-form input[type="file"] {
    padding: 10px;
  }
  .chat-form button {
    padding: 10px 20px;
    background: #1b55e2;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  .chat-form button:hover {
    background: #143db4;
  }

  /* Responsive adjustments for medium screens (tablets, up to 768px) */
  @media (max-width: 768px) {
    .chat-container {
      max-width: 90%;
      padding: 15px;
      margin: 15px auto;
    }
    .chat-box {
      height: 300px;
      padding: 8px;
    }
    .message {
      padding: 8px;
      font-size: 14px;
    }
    .message.user {
      margin-left: 10%;
    }
    .message.admin {
      margin-right: 10%;
    }
    .message img {
      max-width: 150px;
    }
    .chat-form {
      flex-direction: column;
      gap: 8px;
    }
    .chat-form input[type="text"],
    .chat-form input[type="file"] {
      width: 100%;
      padding: 8px;
    }
    .chat-form button {
      width: 100%;
      padding: 10px;
    }
  }

  /* Responsive adjustments for small screens (phones, up to 480px) */
  @media (max-width: 480px) {
    .chat-container {
      max-width: 95%;
      padding: 10px;
      margin: 10px auto;
    }
    .chat-box {
      height: 250px;
      padding: 5px;
    }
    .message {
      padding: 5px;
      font-size: 12px;
    }
    .message.user {
      margin-left: 5%;
    }
    .message.admin {
      margin-right: 5%;
    }
    .message img {
      max-width: 100px;
    }
    .chat-form {
      flex-direction: column;
      gap: 5px;
    }
    .chat-form input[type="text"],
    .chat-form input[type="file"] {
      width: 100%;
      padding: 6px;
      font-size: 14px;
    }
    .chat-form button {
      width: 100%;
      padding: 8px;
      font-size: 14px;
    }
  }
</style>

