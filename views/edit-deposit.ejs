<div class="container-fluid">
        <h2>Edit Deposit</h2>
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>
        <form action="/edit-deposit/<%= deposit._id %>" method="POST">
            <div class="form-group">
                <label class="text-white">Type</label>
                <input type="text" name="type" class="form-control" value="<%= deposit.type %>">
            </div>
            <div class="form-group">
                <label>Amount</label>
                <input type="text" name="amount" class="form-control" value="<%= deposit.amount %>">
            </div>
            <div class="form-group">
                <label class="text-white">Status</label>
                <select name="status" class="form-control">
                    <option value="pending" <%= deposit.status === 'pending' ? 'selected' : '' %>>Pending</option>
                    <option value="approved" <%= deposit.status === 'approved' ? 'selected' : '' %>>Approved</option>
                    <option value="rejected" <%= deposit.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                </select>
            </div>
            <div class="form-group">
                <label class="text-white">Narration</label>
                <textarea name="narration" class="form-control"><%= deposit.narration %></textarea>
            </div>
            <% if (deposit.image) { %>
                <div class="form-group">
                    <label class="text-white">Current Proof of Payment</label><br>
                    <img src="<%= deposit.image %>" alt="Proof of Payment" style="max-width: 100px;">
                </div>
            <% } %>
            <button type="submit" class="btn btn-primary">Update Deposit</button>
        </form>
    </div>
  
</section>




